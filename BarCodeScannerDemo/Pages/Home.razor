@page "/"
@using BarCodeScannerDemo.Components
@using BarCodeScannerDemo.Models
@using SharedKernel.Models

@inject IJSRuntime JSRuntime
@inject IHttpClientFactory httpClientFactory
@inherits BarCodeScannerDemo.Pages.Common.FlowbitePage

<PageTitle>Barcode Scanner Demo</PageTitle>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-8">
        <div class="text-center">
            <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">📱 Barcode Scanner Demo</h1>
            <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
                Scan various barcode formats using your device camera
            </p>
        </div>

        <div class="flex justify-center gap-3 mb-6">
            <button type="button"
                    class="@(IsScanning ? "text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" : "text-white bg-ocio-blue-700 hover:bg-ocio-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800") font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none"
                    @onclick="ToggleScanner">
                @(IsScanning ? "Stop Scanner" : "Start Scanner")
            </button>
        </div>

        <BarcodeScanner @ref="barcodeScannerRef" OnBarcodeScanned="OnBarcodeScanned"
                        OnScanningStopped="() => IsScanning = false" OnScanningStart="() => IsScanning = true"/>
        <div class="text-center mt-4">
            @if (IsScanning)
            {
                <p class="text-2xl font-bold text-gray-600 dark:text-white">Scanning barcode...</p>
            }
        </div>
    </div>
</div>

@if (BarcodeResponse != null && BarcodeResponse.Items.Any())
{
  <div class="mt-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="px-6 bg-ocio-blue-600 text-white py-4 border-b border-b-ocio-blue-700 dark:border-gray-700">
                <h5 class="text-xl font-semibold  text-white">Scan Results</h5>
            </div>
            <div class="p-6">
                <div class="relative overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                        <thead
                            class="text-xs uppercase bg-ocio-blue-400 text-white ">
                        <tr>
                            <th scope="col" class="px-6 py-3"></th>
                            <th scope="col" class="px-6 py-3">Title</th>
                            <th scope="col" class="px-6 py-3">Brand</th>
                            <th scope="col" class="px-6 py-3">Description</th>
                            <th scope="col" class="px-6 py-3">Category</th>
                            <th scope="col" class="px-6 py-3">EAN</th>
                            <th scope="col" class="px-6 py-3">UPC</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var product in BarcodeResponse.Items)
                        {
                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                <td>
                                    @if (product.Images.Any())
                                    {
                                        <img  class="h-12 w-12 object-contain bg-transparent mix-blend-multiply dark:mix-blend-lighten" src="@product.Images.FirstOrDefault()"  alt="@product.Title"/>
                                    }
                                </td>
                                <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">
                                    @product.Title
                                </td>
                                <td class="px-6 py-4">
                                    @product.Brand
                                </td>
                                <td class="px-6 py-4">
                                    @product.Description
                                </td>
                                <td class="px-6 py-4">
                                    @product.Category
                                </td>
                                <td class="px-6 py-4">
                                    <code
                                        class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">@product.EAN</code>
                                </td>
                                <td class="px-6 py-4">
                                    <code
                                        class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">@product.UPC</code>
                                </td>

                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else if (BarcodeResponse != null && !BarcodeResponse.Items.Any())
{
    <div class="scanned-result mt-6 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div
            class="p-4 mb-4 text-yellow-800 border border-yellow-300 rounded-lg bg-yellow-50 dark:bg-gray-800 dark:text-yellow-300 dark:border-yellow-800"
            role="alert">
            <span class="font-medium">No results!</span> No product information found for the scanned barcode.
        </div>
    </div>
}

@code {
    
    private BarcodeScanner? barcodeScannerRef;
    private BarcodeResponse? BarcodeResponse { get; set; }
    private bool IsScanning { get; set; }

    private async Task OnBarcodeScanned(ScannedBarcode barcode)
    {
        var apiClient = httpClientFactory.CreateClient(Constants.ProductsApiClient);

        long.TryParse(barcode.Code, out var upc);

        var response = await apiClient.GetAsync($"api/products?upc={upc}");

        if (response.IsSuccessStatusCode)
        {
            BarcodeResponse = await response.Content.ReadFromJsonAsync<BarcodeResponse>();
        }
    
        StateHasChanged();
    }

    private async Task ToggleScanner()
    {
        IsScanning = !IsScanning;

        if (IsScanning)
        {
            BarcodeResponse = null;
            await barcodeScannerRef?.StartScanner()!;
        }
        else
        {
            await barcodeScannerRef?.StopScanner()!;
        }
    }
   
}
