@page "/"
@using BarCodeScannerDemo.Components

<PageTitle>Barcode Scanner Demo</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">📱 Barcode Scanner Demo</h1>
            <p class="text-center text-muted mb-4">
                Scan various barcode formats using your device camera
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <BarcodeScanner OnBarcodeScanned="OnBarcodeScanned"/>
        </div>
    </div>
</div>
@if (recentScans.Any())
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Recent Scans</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Code</th>
                                <th>Format</th>
                                <th>Time</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var scan in recentScans.Take(10))
                            {
                                <tr>
                                    <td>
                                        <code>@scan.Code</code>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@scan.Format</span>
                                    </td>
                                    <td>@scan.Timestamp.ToString("HH:mm:ss")</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => CopyToClipboard(scan.Code)">
                                            Copy
                                        </button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@code {
    private List<BarcodeScanner.ScannedBarcode> recentScans = new();

    private async Task OnBarcodeScanned(BarcodeScanner.ScannedBarcode barcode)
    {
        recentScans.Insert(0, barcode);

        // Keep only the last 20 scans
        if (recentScans.Count > 20)
        {
            recentScans.RemoveAt(recentScans.Count - 1);
        }

        StateHasChanged();
    }

    private async Task CopyToClipboard(string text)
    {
        // Note: Clipboard API requires HTTPS in production
        try
        {
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", text);
        }
        catch
        {
            // Fallback for browsers that don't support clipboard API
            // You could show a modal with the text to copy manually
        }
    }

}

@inject IJSRuntime JSRuntime